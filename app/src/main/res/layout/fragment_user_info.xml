<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragments.UserInfoFragment" android:id="@+id/user_info_frag">

    <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textName"
            android:layout_marginTop="64dp"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textIdade"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textName"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Data de Nascimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDataNasc"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textIdade"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Estado Civil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textStateCivil"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textDataNasc"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textPhone"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textStateCivil"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>